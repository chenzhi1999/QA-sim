import numpy as np



class QuaTel:

'''
-Two telescopes separated by 200m with collecting area 1m^2, straight E-W
-Width of time bin for correlation: 0.15ns
-Instrumental path length difference = 0
'''
    def __init__(self, N=2, B=200, A=1.0, t=0.15, DL = 0.0, RA=1.3, DEC=0.71):

        self.N = N
        self.B = B                     # baseline in meter
        self.A = A                     # collecting Area in meter-squared
        self.t = t                     # time bin for correlation in ns
        self.DL = DL                   # instrumental path length diff
        self.BW = 1.0/(2.0*np.pi*t)    # Detector Bandwith in GHz
        self.RA =  RA                  # longitude of tele in rad
        self.DEC = DEC                 # latitude of tele in rad
        
